
%h1 
  = t('.title') 
  (
  = link_to image_tag('plus.png', border: 0, size: '36x36'), 
            new_group_path,
            class: 'btn btn-default',
            title: t('.new_group'),
            remote: true, 
            onclick: "$('#modal-container-110063').modal('show');"
  )
%br
%table.table.table-striped
  %thead
    = render 'group_title'
  %tbody.tbody-groups
    = render @groups

%br

= paginate @groups, :theme => 'twitter-bootstrap-3',
                   :pagination_class => "pagination-sm"

%br


