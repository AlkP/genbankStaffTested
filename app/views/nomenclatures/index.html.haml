
%h1 
  = t('.title') 
  (
  = link_to image_tag('plus.png', border: 0, size: '36x36'), 
            new_nomenclature_path,
            class: 'btn btn-default',
            title: t('.new_nomenclature'),
            remote: true, 
            onclick: "$('#modal-container-110063').modal('show');"
  )
%br
%table.table.table-striped
  %thead
    = render 'nomenclature_title'
  %tbody.tbody-nomenclatures
    = render @nomenclatures

%br

= paginate @nomenclatures, :theme => 'twitter-bootstrap-3',
                   :pagination_class => "pagination-sm"

%br


