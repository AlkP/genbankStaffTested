%tr
  %td= role.id
  %td= link_to role.name, 
          role,
          remote: true, 
          onclick: "$('#modal-container-110063').modal('show');"
  %td
    - if role.avalable_to_edit?
      = link_to image_tag("pen.png", border: 0, size: '24x24'), 
            edit_role_path(role), 
            remote: true, 
            onclick: "$('#modal-container-110063').modal('show');"
  %td
    - if role.avalable_to_edit?
      = link_to image_tag("delete.png", border: 0, size: '24x24'),
          role_path(role, :page => params[:page]),
          :method => :delete, 
          :data => { :confirm => "Действительно удалить роль: #{role.name}?" }
